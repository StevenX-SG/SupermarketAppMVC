<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>FairPrime Market - Orders</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2>Orders</h2>

    <table class="table table-bordered align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Total</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (orders && orders.length) { %>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= new Date(order.createdAt).toLocaleString() %></td>
              <td>$<%= Number(order.totalAmount).toFixed(2) %></td>

              <!-- Status -->
              <td>
                <% if (user && user.role === 'admin') { %>
                  <form action="/orders/updateStatus/<%= order.id %>" method="POST" class="d-flex gap-2 justify-content-center">
                    <select name="status" class="form-select form-select-sm">
                      <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                      <option value="Shipped"    <%= order.status === 'Shipped'    ? 'selected' : '' %>>Shipped</option>
                      <option value="Delivered"  <%= order.status === 'Delivered'  ? 'selected' : '' %>>Delivered</option>
                      <option value="Cancelled"  <%= order.status === 'Cancelled'  ? 'selected' : '' %>>Cancelled</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-success">Update</button>
                  </form>
                <% } else { %>
                  <%= order.status %>
                <% } %>
              </td>

              <!-- Actions -->
              <td>
                <% if (user && user.role === 'admin') { %>
                  <!-- Admin: view items inline -->
                  <button class="btn btn-sm btn-info mb-1"
                          type="button"
                          data-bs-toggle="collapse"
                          data-bs-target="#items<%= order.id %>">
                    View Items
                  </button>

                  <!-- Admin: invoice -->
                  <a href="/invoice/<%= order.id %>" class="btn btn-sm btn-warning mb-1">
                    View Invoice
                  </a>

                  <!-- Admin: delete -->
                  <form action="/orders/delete/<%= order.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete this order?')">
                      Delete
                    </button>
                  </form>
                <% } else { %>
                  <!-- User: invoice -->
                  <a href="/my-invoice/<%= order.id %>" class="btn btn-sm btn-info mb-1">
                    View Invoice
                  </a>

                  <!-- User: request refund (only if Delivered) -->
                  <% if (order.status === 'Delivered') { %>
                    <button type="button" class="btn btn-sm btn-warning mb-1" data-bs-toggle="modal" data-bs-target="#refundModal<%= order.id %>">
                      Request Refund
                    </button>
                    
                    <!-- Refund Reason Modal -->
                    <div class="modal fade" id="refundModal<%= order.id %>" tabindex="-1" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Request Refund</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form action="/orders/<%= order.id %>/refund-request" method="POST">
                            <div class="modal-body">
                              <div class="mb-3">
                                <label for="refundReason<%= order.id %>" class="form-label">Reason for Refund *</label>
                                <select id="refundReason<%= order.id %>" name="refundReason" class="form-select" required>
                                  <option value="">-- Select a reason --</option>
                                  <option value="Damaged product">Damaged product</option>
                                  <option value="Rotten / expired produce">Rotten / expired produce</option>
                                  <option value="Wrong item received">Wrong item received</option>
                                  <option value="Customer changed mind">Customer changed mind</option>
                                </select>
                              </div>
                              <div class="mb-3">
                                <label for="refundNotes<%= order.id %>" class="form-label">Additional Notes (Optional)</label>
                                <textarea id="refundNotes<%= order.id %>" name="refundNotes" class="form-control" rows="3" placeholder="Provide any additional details about the refund request..."></textarea>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-warning">Submit Refund Request</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% } %>
                <% } %>
              </td>
            </tr>

            <% if (user && user.role === 'admin') { %>
              <!-- Admin-only collapsible items -->
              <tr class="collapse" id="items<%= order.id %>">
                <td colspan="5">
                  <table class="table table-sm table-bordered mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Line Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% const items = order.items || []; %>
                      <% if (items.length) { %>
                        <% items.forEach(item => { %>
                          <tr>
                            <td><%= item.productName %></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= Number(item.price * item.quantity).toFixed(2) %></td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="3" class="text-muted">No items for this order.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </td>
              </tr>
            <% } %>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-muted">No orders found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
