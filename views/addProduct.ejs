<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>FairPrime Market - Add Product</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="text-center mb-4">Add New Product</h2>
    <form action="/addProduct" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">

      <div class="mb-3">
        <label for="productName" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="productName" name="productName" required>
      </div>

      <div class="mb-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" required>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price ($)</label>
        <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <input type="text" class="form-control" id="category" name="category" placeholder="e.g. Fruits, Dairy" required>
      </div>

      <!-- NEW: Brand -->
      <div class="mb-3">
        <label for="brand" class="form-label">Brand</label>
        <input type="text" class="form-control" id="brand" name="brand" placeholder="e.g. Zespri, RedMart, Generic" required>
      </div>

      <div class="mb-3">
        <label for="tags" class="form-label">Tags</label>
        <input type="text" class="form-control" id="tags" name="tags" placeholder="Enter tags (comma-separated)" value="">
      </div>

      <div class="mb-4">
        <label for="image" class="form-label">Product Image</label>
        <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-success">Add Product</button>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
