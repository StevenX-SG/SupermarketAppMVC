<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="text-center mb-4">
      <h2>Products from Supermarket</h2>
    </div>

    <table class="table table-hover text-center">
      <thead class="table-dark align-middle">
        <tr>
          <th>Product Name</th>
          <th>Product Image</th>
          <th>Available</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Buy</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < products.length; i++) { %>
          <tr class="align-middle">
            <td class="py-3"><a href="/product/<%= products[i].id %>"><%= products[i].productName %></a></td>
            <td class="py-3"><%= products[i].category || 'N/A' %></td>
            <td class="py-3"><%= products[i].tags || 'N/A' %></td>
            <td class="py-3">
              <img src="/images/<%= products[i].image %>" alt="<%= products[i].productName %>" class="img-thumbnail" style="max-width: 100px;">
            </td>
            <td class="py-3"><%= products[i].quantity %></td>
            <td class="py-3">$<%= products[i].price.toFixed(2) %></td>
            <td class="py-3">
              <select class="form-select" onchange="document.getElementById('quantity-<%= products[i].id %>').value = this.value">
                <% for (let q = 1; q <= 5; q++) { %>
                  <option value="<%= q %>"><%= q %></option>
                <% } %>
              </select>
            </td>
            <td class="py-3">
              <form action="/add-to-cart/<%= products[i].id %>" method="POST">
                <input type="hidden" name="quantity" id="quantity-<%= products[i].id %>" value="1">
                <button type="submit" class="btn btn-success btn-sm">Buy</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
