<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>FairPrime Market - Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="mb-4">Shopping Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <div class="alert alert-info">Your cart is empty.</div>
      <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
    <% } else { %>
      <table class="table table-bordered align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% cart.forEach(item => { %>
            <tr>
              <td><%= item.productName %></td>

              <td>
                <% let imgSrc = item.image && item.image.startsWith('http')
                      ? item.image
                      : (item.image ? '/images/' + item.image : ''); %>
                <% if (imgSrc) { %>
                  <img src="<%= imgSrc %>" width="80" class="img-thumbnail" alt="<%= item.productName %>">
                <% } else { %>
                  <span class="text-muted">No image</span>
                <% } %>
              </td>

              <td><%= item.category || '-' %></td>
              <td><%= item.tags || '-' %></td>

              <td>$<%= item.price.toFixed(2) %></td>

              <td style="width:130px;">
                <form action="/cart/update/<%= item.id %>" method="POST" class="d-flex flex-row gap-2 align-items-center justify-content-center mb-0">
                  <input type="number"
                         name="quantity"
                         value="<%= item.quantity %>"
                         min="1"
                         max="<%= item.maxQuantity || 99 %>"
                         class="form-control text-center"
                         style="width:70px;">
                  <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </form>
              </td>

              <td>
                $<%= (item.price * item.quantity).toFixed(2) %>
                <% total += item.price * item.quantity; %>
              </td>

              <td>
                <form action="/cart/remove/<%= item.id %>" method="POST" style="display:inline;">
                  <button type="submit"
                          class="btn btn-danger btn-sm"
                          onclick="return confirm('Remove this item?')">
                    Remove
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="mb-3 text-end">
        <h4>Total: $<%= total.toFixed(2) %></h4>
      </div>

      <div class="d-flex gap-2">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>

      <!-- Checkout and Clear Cart -->
      <div class="d-flex gap-2 mt-3">
        <a href="/checkout" class="btn btn-success">Checkout</a>
        </form>

        <form action="/cart/clear" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Clear Cart</button>
        </form>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
