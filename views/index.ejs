<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>FairPrime Market - Home</title>
  <style>
    .hero-banner {
      background: linear-gradient(90deg, #ff6a00, #ffb300);
      color: white;
      padding: 30px 20px;
      border-radius: 8px;
    }
    .category-pill {
      border-radius: 999px;
      border: 1px solid #eee;
      padding: 6px 14px;
      font-size: 0.9rem;
      cursor: pointer;
      background: #fff;
    }
    .category-pill:hover {
      background: #fff5e6;
    }
    .product-card img {
      object-fit: cover;
      height: 150px;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-3">

    <!-- HERO / BANNER AREA (like Lazada top banner) -->
    <div class="hero-banner mb-4 d-flex flex-column flex-md-row align-items-center">
      <div class="flex-grow-1">
        <h2 class="mb-2">FairPrime Market</h2>
        <% if (user) { %>
          <% if (user.role === 'admin') { %>
            <p class="mb-3">Manage your store, products and orders from here.</p>
            <a href="/inventory" class="btn btn-light btn-sm">Go to Inventory</a>
          <% } else { %>
            <p class="mb-3">Welcome back, <strong><%= user.username %></strong>! Check out today’s deals.</p>
            <a href="/shopping" class="btn btn-light btn-sm">Start Shopping</a>
          <% } %>
        <% } else { %>
          <p class="mb-3">
            Welcome to our supermarket app. Browse products and login to start shopping.
          </p>
          <a href="/login" class="btn btn-light btn-sm me-2">Login</a>
          <a href="/register" class="btn btn-outline-light btn-sm">Register</a>
        <% } %>
      </div>
      <!-- Optional promo image on the right -->
      <div class="mt-3 mt-md-0 ms-md-4">
        <span class="badge bg-dark">Today’s Deals</span>
        <p class="mb-0 small">Fresh groceries, daily essentials, and more.</p>
      </div>
    </div>

    <!-- CATEGORIES STRIP (simple Lazada-style row) -->
    <% if (products && products.length) { %>
      <div class="mb-3">
        <h5 class="mb-2">Browse by Category</h5>
        <div class="d-flex flex-wrap gap-2">
          <% 
            const categories = [...new Set(products.map(p => p.category).filter(Boolean))];
          %>
          <% if (categories.length) { %>
            <% categories.forEach(c => { %>
              <a href="/shopping?category=<%= encodeURIComponent(c) %>" class="text-decoration-none">
                <span class="category-pill"><%= c %></span>
              </a>
            <% }) %>
          <% } else { %>
            <span class="text-muted small">No categories yet.</span>
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- PRODUCT GRID (like Lazada “Just For You”) -->
    <% if (products && products.length) { %>
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0">Recommended for You</h5>
        <a href="/shopping" class="small text-decoration-none">View all &raquo;</a>
      </div>

      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
        <% products.forEach(p => { %>
          <div class="col">
            <div class="card h-100 product-card">
              <%
                const imgSrc = p.image && p.image.startsWith('http')
                  ? p.image
                  : (p.image ? '/images/' + p.image : '');
              %>
              <% if (imgSrc) { %>
                <img src="<%= imgSrc %>" class="card-img-top" alt="<%= p.productName %>">
              <% } else { %>
                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height:150px;">
                  <span class="text-muted small">No image</span>
                </div>
              <% } %>

              <div class="card-body p-2 d-flex flex-column">
                <div class="small text-truncate mb-1"><%= p.productName %></div>
                <div class="fw-bold text-danger mb-1">
                  $<%= Number(p.price).toFixed(2) %>
                </div>
                <div class="text-muted small mb-2">
                  <%= p.category || 'General' %>
                </div>
                <a href="/product/<%= p.id %>" class="btn btn-primary btn-sm mt-auto">
                  View
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-muted text-center mt-4">No products to display yet.</p>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
