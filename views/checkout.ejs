<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>FairPrime Market - Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- PayPal JS SDK: Load with SGD as default currency -->
  <script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=SGD" async defer></script>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="mb-4">Checkout</h2>

    <form id="checkout-form" action="/checkout" method="POST">
      <div class="row">
        <!-- LEFT: address + delivery + payment -->
        <div class="col-md-7 mb-4">
          <div class="border rounded p-3 mb-3">
            <h5 class="mb-2">Delivery Address</h5>
            <textarea name="address" class="form-control" rows="3"
                      placeholder="Enter your delivery address"><%= user.address || '' %></textarea>
          </div>

          <div class="border rounded p-3 mb-3">
            <h5 class="mb-2">Delivery Option</h5>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="deliveryOption"
                     id="del-standard" value="standard" checked>
              <label class="form-check-label" for="del-standard">Standard (3–5 days)</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="deliveryOption"
                     id="del-express" value="express">
              <label class="form-check-label" for="del-express">Express (1–2 days)</label>
            </div>
          </div>

          <div class="border rounded p-3 mb-3">
            <h5 class="mb-2">Payment Method</h5>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod"
                     id="pm-card" value="card" checked>
              <label class="form-check-label" for="pm-card">Credit / Debit Card</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod"
                     id="pm-wallet" value="wallet">
              <label class="form-check-label" for="pm-wallet">Digital Wallet (GrabPay / PayNow)</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod"
                     id="pm-cod" value="cod">
              <label class="form-check-label" for="pm-cod">Cash on Delivery</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod"
                     id="pm-paypal" value="paypal">
              <label class="form-check-label" for="pm-paypal">PayPal</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod"
                     id="pm-nets" value="nets">
              <label class="form-check-label" for="pm-nets">NETS QR</label>
            </div>
          </div>
        </div>

        <!-- RIGHT: order summary -->
        <div class="col-md-5">
          <div class="border rounded p-3 mb-3">
            <h5 class="mb-3">Order Summary</h5>

            <ul class="list-group mb-3">
              <% cartItems.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between">
                  <span><%= item.productName %> × <%= item.quantity %></span>
                  <span>$<%= (item.price * item.quantity).toFixed(2) %></span>
                </li>
              <% }) %>
            </ul>

            <p class="d-flex justify-content-between">
              <span>Subtotal</span>
              <span>$<%= subtotal.toFixed(2) %></span>
            </p>
            <p class="d-flex justify-content-between">
              <span>GST (9%)</span>
              <span>$<%= (subtotal * 0.09).toFixed(2) %></span>
            </p>
            <hr>
            <h5 class="d-flex justify-content-between">
              <span>Total (SGD)</span>
              <span id="checkout-total"
                    data-total="<%= (subtotal * 1.09).toFixed(2) %>">
                $<%= (subtotal * 1.09).toFixed(2) %>
              </span>
            </h5>

            <!-- PayPal Currency Exchange Converter & Selection -->
            <div id="paypal-exchange-container" class="mt-3 p-3 border rounded" style="display:none; background-color: #f8f9fa;">
              <h6 class="mb-3">
                <i class="fas fa-exchange-alt"></i> Select Payment Currency
              </h6>
              <p class="small text-muted mb-2">Choose your preferred currency for payment. Your invoice will reflect the actual amount paid.</p>
              
              <div class="input-group mb-2">
                <select id="payment-currency-select" class="form-select form-select-sm">
                  <option value="SGD" selected>SGD - Singapore Dollar (Original)</option>
                  <option value="USD">USD - US Dollar</option>
                  <option value="EUR">EUR - Euro</option>
                  <option value="GBP">GBP - British Pound</option>
                  <option value="JPY">JPY - Japanese Yen</option>
                  <option value="AUD">AUD - Australian Dollar</option>
                  <option value="CAD">CAD - Canadian Dollar</option>
                </select>
                <button id="apply-currency-btn" type="button" class="btn btn-sm btn-primary">
                  Apply
                </button>
              </div>

              <!-- Currency Conversion Display -->
              <div id="currency-conversion-display" class="alert alert-info mb-2" style="display:none; font-size: 0.9rem;">
                <small>
                  <strong>Original Amount:</strong> SGD $<span id="original-amount"></span><br>
                  <strong>Payment Amount:</strong> <span id="payment-currency-code"></span> <span id="payment-amount"></span><br>
                  <strong>Exchange Rate:</strong> 1 SGD = <span id="exchange-rate-display"></span> <span id="exchange-rate-currency"></span><br>
                  <strong>Expires:</strong> <span id="quote-expiry"></span>
                </small>
              </div>

              <!-- Loading & Error states -->
              <div id="currency-loading" class="spinner-border spinner-border-sm" style="display:none;" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <div id="currency-error" class="alert alert-danger" style="display:none; font-size: 0.9rem;">
                <small id="currency-error-text"></small>
              </div>

              <!-- Hidden input to store selected currency & amount -->
              <input type="hidden" id="selected-payment-currency" name="payment-currency" value="SGD">
              <input type="hidden" id="selected-payment-amount" name="payment-amount" value="">
              <input type="hidden" id="selected-fx-id" name="fx-id" value="">
            </div>

            <!-- Normal Place Order button (non-PayPal/HitPay methods) -->
            <button id="place-order-btn" type="submit"
                    class="btn btn-success w-100 mt-3">
              Place Order
            </button>

            <!-- PayPal container, shown only when PayPal selected -->
            <div id="paypal-container" class="mt-3" style="display:none;">
              <div id="paypal-button-container"></div>
            </div>

            <!-- NETS QR container, shown only when NETS selected -->
            <div id="nets-container" class="mt-3" style="display:none;">
              <h5 class="mb-3">Pay with NETS QR</h5>
              <p class="text-muted mb-3">Click the button below to generate your NETS QR code</p>
              <button id="nets-btn" type="button" class="btn btn-primary w-100">Generate NETS QR Code</button>
            </div>

            <a href="/cart" class="btn btn-outline-secondary w-100 mt-2">
              Back to Cart
            </a>
          </div>
        </div>
      </div>
    </form>

    <!-- NETS form (outside main form) -->
    <form id="nets-form" action="/generateNETSQR" method="POST" style="display:none;">
      <input type="hidden" id="nets-amount" name="cartTotal" value="">
    </form>
  </div>

  <%- include('partials/footer') %>

  <script>
    // ===== PAYPAL SDK DYNAMIC RELOADING =====
    function reloadPayPalSDK(currency = 'SGD') {
      return new Promise((resolve, reject) => {
        // Remove existing PayPal script
        const existingScripts = document.querySelectorAll('script[src*="paypal.com/sdk"]');
        existingScripts.forEach(script => script.remove());
        
        // Remove PayPal global object to reset
        delete window.paypal;

        // Create and load new script with currency
        const script = document.createElement('script');
        script.src = `https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID %>&currency=${currency}`;
        script.async = true;
        
        script.onload = () => {
          console.log(`[PayPal SDK] Loaded with currency: ${currency}`);
          resolve();
        };
        script.onerror = () => {
          console.error(`[PayPal SDK] Failed to load with currency: ${currency}`);
          reject(new Error(`Failed to load PayPal SDK with currency ${currency}`));
        };
        
        document.head.appendChild(script);
      });
    }

    const methodRadios = document.querySelectorAll('input[name="paymentMethod"]');
    const placeOrderBtn = document.getElementById('place-order-btn');
    const paypalContainer = document.getElementById('paypal-container');
    const netsContainer = document.getElementById('nets-container');
    const paypalExchangeContainer = document.getElementById('paypal-exchange-container');
    const netsBtn = document.getElementById('nets-btn');
    const netsForm = document.getElementById('nets-form');
    const netsAmount = document.getElementById('nets-amount');
    const totalEl = document.getElementById('checkout-total');
    const totalValue = totalEl.dataset.total;

    // Currency Exchange Elements
    const paymentCurrencySelect = document.getElementById('payment-currency-select');
    const applyCurrencyBtn = document.getElementById('apply-currency-btn');
    const currencyConversionDisplay = document.getElementById('currency-conversion-display');
    const currencyLoading = document.getElementById('currency-loading');
    const currencyError = document.getElementById('currency-error');
    const currencyErrorText = document.getElementById('currency-error-text');
    const selectedPaymentCurrency = document.getElementById('selected-payment-currency');
    const selectedPaymentAmount = document.getElementById('selected-payment-amount');
    const selectedFxId = document.getElementById('selected-fx-id');

    function updatePaymentUI() {
      const selected = document.querySelector('input[name="paymentMethod"]:checked').value;
      
      // Hide all payment containers first
      placeOrderBtn.style.display = 'none';
      paypalContainer.style.display = 'none';
      netsContainer.style.display = 'none';
      paypalExchangeContainer.style.display = 'none';
      
      // Show the appropriate payment method
      if (selected === 'paypal') {
        paypalContainer.style.display = 'block';
        paypalExchangeContainer.style.display = 'block';
      } else if (selected === 'nets') {
        netsContainer.style.display = 'block';
        netsAmount.value = totalValue;
      } else {
        placeOrderBtn.style.display = 'block';
      }
    }

    // Currency Selection & Conversion Function
    async function applyCurrencySelection() {
      const targetCurrency = paymentCurrencySelect.value;
      
      // If SGD selected, just use original amount
      if (targetCurrency === 'SGD') {
        selectedPaymentCurrency.value = 'SGD';
        selectedPaymentAmount.value = totalValue;
        selectedFxId.value = '';
        currencyConversionDisplay.style.display = 'none';
        currencyError.style.display = 'none';
        
        // Reload PayPal SDK with SGD if PayPal is selected
        if (document.querySelector('input[name="paymentMethod"]:checked').value === 'paypal') {
          console.log('[Checkout] Reloading PayPal SDK with SGD');
          try {
            await reloadPayPalSDK('SGD');
            renderPayPalButton();
          } catch (err) {
            console.error('[Checkout] Error reloading SDK:', err);
            currencyErrorText.textContent = 'Error reloading PayPal SDK';
            currencyError.style.display = 'block';
          }
        }
        return;
      }

      // Clear previous states
      currencyError.style.display = 'none';
      currencyConversionDisplay.style.display = 'none';
      currencyLoading.style.display = 'inline-block';

      try {
        const response = await fetch('/api/paypal/exchange-rate', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            baseCurrency: 'SGD',
            targetCurrency: targetCurrency,
            amount: totalValue
          })
        });

        const data = await response.json();
        currencyLoading.style.display = 'none';

        if (!data.success) {
          currencyErrorText.textContent = data.error || 'Failed to get exchange rate';
          currencyError.style.display = 'block';
          return;
        }

        // Store selected currency and amount
        selectedPaymentCurrency.value = targetCurrency;
        selectedPaymentAmount.value = data.convertedAmount;
        selectedFxId.value = data.fxId;

        // Display conversion details
        document.getElementById('original-amount').textContent = data.baseAmount;
        document.getElementById('payment-currency-code').textContent = targetCurrency;
        document.getElementById('payment-amount').textContent = data.convertedAmount;
        document.getElementById('exchange-rate-display').textContent = data.exchangeRate;
        document.getElementById('exchange-rate-currency').textContent = targetCurrency;
        document.getElementById('quote-expiry').textContent = new Date(data.expirationTime).toLocaleString();

        currencyConversionDisplay.style.display = 'block';

        // Reload PayPal SDK with new currency if PayPal is selected
        if (document.querySelector('input[name="paymentMethod"]:checked').value === 'paypal') {
          console.log(`[Checkout] Reloading PayPal SDK with ${targetCurrency}`);
          try {
            await reloadPayPalSDK(targetCurrency);
            renderPayPalButton();
          } catch (err) {
            console.error('[Checkout] Error reloading SDK:', err);
            currencyErrorText.textContent = 'Error reloading PayPal SDK with new currency';
            currencyError.style.display = 'block';
          }
        }
      } catch (err) {
        currencyLoading.style.display = 'none';
        currencyErrorText.textContent = 'Error: ' + err.message;
        currencyError.style.display = 'block';
      }
    }

    // Handle NETS button click
    netsBtn.addEventListener('click', function(e) {
      e.preventDefault();
      netsAmount.value = totalValue;
      netsForm.submit();
    });

    // Currency selection handler
    applyCurrencyBtn.addEventListener('click', applyCurrencySelection);
    paymentCurrencySelect.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        applyCurrencySelection();
      }
    });

    methodRadios.forEach(r => r.addEventListener('change', updatePaymentUI));
    updatePaymentUI();

    // Render PayPal button function
    function renderPayPalButton() {
      // Wait for PayPal to be available
      if (typeof paypal === 'undefined') {
        console.warn('[Checkout] PayPal SDK not yet loaded, retrying...');
        setTimeout(renderPayPalButton, 100);
        return;
      }

      // Clear existing button container
      const container = document.getElementById('paypal-button-container');
      container.innerHTML = '';

      // Render PayPal button
      try {
        paypal.Buttons({
          createOrder: function (data, actions) {
            // Use selected payment amount (in selected currency) for PayPal order
            const paymentAmount = selectedPaymentAmount.value || totalValue;
            const paymentCurrency = selectedPaymentCurrency.value || 'SGD';
            
            console.log('[CLIENT] Creating PayPal order with:', {
              amount: paymentAmount,
              currency: paymentCurrency
            });
            
            return fetch('/api/paypal/create-order', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                amount: paymentAmount,
                currency: paymentCurrency
              })
            }).then(res => res.json())
              .then(data => {
                if (data.id) {
                  console.log('[CLIENT] Order created, ID:', data.id);
                  return data.id;
                } else {
                  throw new Error(data.error || 'Failed to create PayPal order');
                }
              });
          },
          onApprove: function (data, actions) {
            console.log('[CLIENT] PayPal onApprove called');
            console.log('[CLIENT] PayPal data.orderID:', data.orderID);
            return actions.order.capture().then(function (details) {
              console.log('[CLIENT] PayPal capture details:', details);
              // Call back-end to finalize the supermarket order
              console.log('[CLIENT] Sending POST to /orders/paypal-complete with paypalOrderId:', data.orderID);
              return fetch('/orders/paypal-complete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  paypalOrderId: data.orderID,
                  paymentCurrency: selectedPaymentCurrency.value,
                  paymentAmount: selectedPaymentAmount.value,
                  fxId: selectedFxId.value
                })
              }).then(response => {
                console.log('[CLIENT] Response status:', response.status);
                if (!response.ok) {
                  console.error('[CLIENT] Fetch error:', response.statusText);
                  return response.json().then(err => { throw err; });
                }
                return response;
              }).then(response => {
                console.log('[CLIENT] Redirecting to payment success/failure page');
                // Server will handle the redirect in payWithPaypal
                window.location.href = response.url;
              }).catch(err => {
                console.error('[CLIENT] Fetch catch error:', err);
                alert('Error completing payment: ' + (err.error || err.message || 'Unknown error'));
              });
            });
          },
          onError: function (err) {
            console.error('[CLIENT] PayPal button error:', err);
            alert('An error occurred with PayPal: ' + err);
          }
        }).render('#paypal-button-container');
      } catch (err) {
        console.error('[Checkout] Error rendering PayPal button:', err);
      }
    }

    // Render button when page loads (after PayPal SDK is available)
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        console.log('[Checkout] Page loaded, waiting for PayPal SDK...');
        // Give PayPal SDK a moment to load
        setTimeout(renderPayPalButton, 500);
      });
    } else {
      // Page already loaded
      console.log('[Checkout] Page already loaded, waiting for PayPal SDK...');
      setTimeout(renderPayPalButton, 500);
    }
  </script>
</body>
</html>
