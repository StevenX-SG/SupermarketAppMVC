<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Successful - Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    .success-container {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 60vh;
      padding: 40px 20px;
    }
    .success-card {
      max-width: 600px;
      width: 100%;
      border: none;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
    }
    .success-header {
      background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
      color: white;
      padding: 40px 20px;
      text-align: center;
      border-radius: 12px 12px 0 0;
    }
    .success-icon {
      font-size: 60px;
      margin-bottom: 15px;
    }
    .success-title {
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .success-subtitle {
      font-size: 16px;
      opacity: 0.9;
      margin: 0;
    }
    .order-details {
      padding: 30px;
    }
    .detail-row {
      display: flex;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #e9ecef;
    }
    .detail-row:last-child {
      border-bottom: none;
    }
    .detail-label {
      font-weight: 600;
      color: #495057;
    }
    .detail-value {
      color: #212529;
      text-align: right;
    }
    .total-row {
      padding: 15px 0 !important;
      background-color: #f8f9fa;
      border-radius: 8px;
      padding-left: 12px;
      padding-right: 12px;
      margin-top: 15px;
    }
    .total-row .detail-label {
      font-size: 18px;
      color: #28a745;
    }
    .total-row .detail-value {
      font-size: 18px;
      color: #28a745;
      font-weight: bold;
    }
    .action-buttons {
      padding: 30px;
      background-color: #f8f9fa;
      border-radius: 0 0 12px 12px;
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
    .action-buttons a,
    .action-buttons button {
      flex: 1;
      min-width: 150px;
    }
    .transaction-id {
      background-color: #e8f5e9;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 15px;
      border-left: 4px solid #28a745;
    }
    .transaction-id-label {
      font-size: 12px;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .transaction-id-value {
      font-family: 'Courier New', monospace;
      font-size: 14px;
      font-weight: bold;
      color: #28a745;
      word-break: break-all;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="success-container">
    <div class="success-card">
      <!-- Success Header -->
      <div class="success-header">
        <div class="success-icon">âœ“</div>
        <div class="success-title">Payment Successful!</div>
        <p class="success-subtitle">Thank you for your purchase</p>
      </div>

      <!-- Order Details -->
      <div class="order-details">
        <% if (transactionId) { %>
          <div class="transaction-id">
            <div class="transaction-id-label">Transaction ID</div>
            <div class="transaction-id-value"><%= transactionId %></div>
          </div>
        <% } %>

        <% if (orderId) { %>
          <div class="detail-row">
            <span class="detail-label">Order ID</span>
            <span class="detail-value">#<%= orderId %></span>
          </div>
        <% } %>

        <% if (orderDate) { %>
          <div class="detail-row">
            <span class="detail-label">Order Date</span>
            <span class="detail-value"><%= new Date(orderDate).toLocaleDateString() %></span>
          </div>
        <% } %>

        <% if (paymentMethod) { %>
          <div class="detail-row">
            <span class="detail-label">Payment Method</span>
            <span class="detail-value">
              <% if (paymentMethod === 'paypal') { %>
                <strong>PayPal</strong>
              <% } else if (paymentMethod === 'hitpay') { %>
                <strong>HitPay</strong>
              <% } else if (paymentMethod === 'nets') { %>
                <strong>NETS QR</strong>
              <% } else { %>
                <%= paymentMethod %>
              <% } %>
            </span>
          </div>
        <% } %>

        <% if (amount) { %>
          <div class="detail-row total-row">
            <span class="detail-label">Amount Paid</span>
            <span class="detail-value"><%= paymentCurrency %> <%= parseFloat(amount).toFixed(2) %></span>
          </div>
        <% } %>

        <% if (paymentCurrency && paymentCurrency !== 'SGD') { %>
          <div class="detail-row" style="background-color: #fff3cd; border-left: 4px solid #ffc107; padding: 12px;">
            <span class="detail-label" style="color: #856404;">
              <i class="fas fa-info-circle"></i> Currency Info
            </span>
            <span class="detail-value" style="color: #856404; font-size: 0.9rem;">
              Charged in <%= paymentCurrency %> | Settled in SGD
            </span>
          </div>
        <% } %>

        <% if (itemCount) { %>
          <div class="detail-row">
            <span class="detail-label">Items Ordered</span>
            <span class="detail-value"><%= itemCount %> item<%= itemCount !== 1 ? 's' : '' %></span>
          </div>
        <% } %>

        <% if (estimatedDelivery) { %>
          <div class="detail-row">
            <span class="detail-label">Estimated Delivery</span>
            <span class="detail-value"><%= estimatedDelivery %></span>
          </div>
        <% } %>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons">
        <a href="/orders" class="btn btn-success">
          View My Orders
        </a>
        <a href="/shopping" class="btn btn-outline-secondary">
          Continue Shopping
        </a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
