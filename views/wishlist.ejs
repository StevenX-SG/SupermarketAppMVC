<!DOCTYPE html>
<html>
<head>
    <title>FairPrime Market - Wishlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<%- include('partials/header') %>

<div class="container mt-4">
    <h2>Wishlist</h2>

    <table class="table table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Add to Cart</th>
                <th>Remove</th>
            </tr>
        </thead>

        <tbody>
            <% if (wishlist.length === 0) { %>
                <tr><td colspan="5">No items in wishlist</td></tr>
            <% } %>

            <% wishlist.forEach(item => { %>
                <tr>
                    <td><%= item.productName %></td>

                    <td>
                        <img src="/images/<%= item.image %>" style="max-width: 80px;">
                    </td>

                    <td>$<%= Number(item.price).toFixed(2) %></td>

                    <td>
                        <form action="/wishlist/add-to-cart/<%= item.wishlistId %>/<%= item.productId %>" method="POST">
                            <button class="btn btn-success btn-sm">Add</button>
                        </form>
                    </td>

                    <td>
                        <form action="/wishlist/remove/<%= item.wishlistId %>" method="POST">
                            <button class="btn btn-danger btn-sm">X</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
</body>
</html>
